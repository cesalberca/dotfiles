[url "https://github.com/"]
    insteadOf = gh:
[core]
	excludesfile = /Users/cesaralberca/.gitignore_global
	autocrlf = input
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/calberca/.stCommitMsg
[branch "master"]
	remote = origin
	merge = refs/heads/master
	mergeoptions = --no-ff
[pull]
	ff = true
